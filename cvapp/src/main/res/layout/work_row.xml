<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/jobTitleTextView"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/jobTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:text="Software Engineer"
        android:textColor="#151515"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/companyNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DMI (Digital Management, LLC)"
        android:textColor="#050505"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/jobTitleTextView"
        app:layout_constraintStart_toStartOf="@+id/jobTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/jobTitleTextView" />

    <TextView
        android:id="@+id/workDurationTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jun 2015 - Apr 2018"
        app:layout_constraintEnd_toEndOf="@+id/companyNameTextView"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="@+id/companyNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/companyNameTextView" />

    <TextView
        android:id="@+id/companyLocationTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phnom Penh, Cambodia"
        app:layout_constraintEnd_toEndOf="@+id/workDurationTextView"
        app:layout_constraintStart_toStartOf="@+id/workDurationTextView"
        app:layout_constraintTop_toBottomOf="@+id/workDurationTextView" />

    <TextView
        android:id="@+id/mainResponsibilityTextView"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:text="iOS and watchOS app developer"
        android:textColor="#050505"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/companyLocationTextView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/companyLocationTextView" />

    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="#DFE4E8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainResponsibilityTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>